{% set video %}
   {{ fields.field_testimonial_video.content|striptags|trim }}
{% endset %}   
<div class="item">
   <article class="testimonial-item testimonial-node-v1">      
      <div class="testimonial-image">
         {{ fields.field_testimonial_image.content }}
         {% if video %}
            <div class="video-body">
               <a class="popup-video gsc-video-link" href="{{ video }}">
                  <span class="icon-play"><i class="fa fa-play space-40"></i></span>
               </a>
            </div>
         {% endif %}
      </div>
      <div class="testimonial-content">
         <div class="quote">{{ fields.body.content|striptags|trim }}</div>  
         <div class="info">
            <div class="left"><div class="avatar"> {{ fields.field_testimonial_avatar.content }}</div></div>
            <div class="right">
               <div class="title">{{ fields.field_testimonial_name.content }}</div>  
               <div class="job">{{ fields.field_testimonial_job.content }}</div>
            </div>
         </div>  
      </div>

   </article>
</div>